<form action="/login" class="form-signin h-60 bg-warning" method="post">
  {{#each errorMessages}}
    <div class="reg-error">
      {{this.msg}}
    </div>
  {{/each}}
  <h2 class="form-signin-header mb-4 text-center text-primary">Login Portal</h2>
  <input
    type="email"
    class="form-control"
    name="email"
    placeholder="Enter your Email address"
    required
  />
  <br />
  <input
    type="password"
    name="password"
    class="form-control"
    placeholder="Enter your Password"
    required
  />
  <br />
  <button type="submit" class="btn btn-lg btn-primary btn-block">Sign In</button>
  <h5 class="text-center">Or</h5>
  <a href="/auth/facebook" class="btn btn-outline-danger btn-lg btn-block">Sign
    Up with Facebook</a>
</form>